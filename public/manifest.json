{
    "manifest_version": 2,
    "name": "Bookmarker",
    "short_name": "bookmarker",
    "version": "0.1.0",
    "description": "Bookmark Tagger",
    "icons": {
        "64": "icons/icon-bookmarked-64.png"
    },
    "background": {
        "scripts": [
            "browser-polyfill.js",
            "background.js"
        ]
    },
    "permissions": [
        "activeTab",
        "tabs",
        "storage"
    ],
    "options_page": "options.html",
    "browser_action": {
        "default_title": "Bookmark Tagger",
        "default_popup": "popup.html",
        "default_icon": {
            "64": "icons/icon-unbookmarked-64.png"
        }
    },
    "content_security_policy": "script-src 'self' https://apis.google.com; object-src 'self'"
}
