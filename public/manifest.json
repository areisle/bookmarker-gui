{
    "manifest_version": 3,
    "name": "Bookmarker",
    "short_name": "bookmarker",
    "version": "1.0.0",
    "description": "Bookmark Tagger",
    "icons": {
        "16": "icons/icon.png",
        "32": "icons/icon.png",
        "150": "icons/icon.png"
    },
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "action": {
        "default_title": "Bookmark Tagger",
        "default_popup": "popup.html"
    },
    "options_page": "options.html",
    "background": {
        "service_worker": "background.js"
    }
}
